<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/clrGenOnePrimary"
    >

    <!--
    @author: Rajan Bhamra 2034215
    @version: 3.0
    Purpose: Log In Page for CSC306 Coursework.
    -->

    <TextView
        android:id="@+id/RajAppsLogo_LogInPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="@string/raj_apps"
        android:background="@drawable/button_gradient"
        android:fontFamily="cursive"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.079"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <ImageView
        android:id="@+id/image_NiceFood_LoginPage"
        android:layout_width="238dp"
        android:layout_height="149dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25"
        app:srcCompat="@drawable/restaurant_review_image" />



    <EditText
        android:id="@+id/editText_UserInputEmail_LoginPage"
        android:layout_width="311dp"
        android:layout_height="54dp"
        android:ems="10"

        android:fontFamily="casual"
        android:inputType="text"
        android:hint="@string/email_request_LoginPage"
        android:textAlignment="center"

        android:textColorHint="@color/white"
        android:textColor="@color/white"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.46"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.454" />

    <EditText
        android:id="@+id/editText_UserInputPassword_LoginPage"
        android:layout_width="310dp"
        android:layout_height="58dp"
        android:ems="10"
        android:fontFamily="casual"

        android:inputType="textPassword"
        android:hint="@string/password_request_LoginPage"
        android:textAlignment="center"
        android:textColorHint="@color/white"
        android:textColor="@color/white"

        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.455"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.575" />

    <Button
        android:id="@+id/LogMeInButton_LoginPage"
        android:layout_width="247dp"
        android:layout_height="86dp"
        android:backgroundTint="@color/clrGenOneSecondary"

        android:text="@string/login_finalBtn_LoginPage"
        android:textColor="@color/clrGenOne4th"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.585"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826"
        app:rippleColor="@color/clrGenOne4th" />

    <Button
        android:id="@+id/ForgotPasswordButton_LoginPage"
        android:layout_width="123dp"
        android:layout_height="56dp"
        android:backgroundTint="@color/clrGenOneSecondary"

        android:text="@string/forgot_password_LoginPage"
        android:textColor="@color/clrGenOneTertiary"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.857"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.687"
        app:rippleColor="@color/clrGenOne4th" />

    <Button
        android:id="@+id/SignUpButton_LoginPage"
        android:layout_width="128dp"
        android:layout_height="53dp"
        android:backgroundTint="@color/clrGenOneSecondary"

        android:text="@string/sign_up_LoginPage"
        android:textColor="@color/clrGenOneTertiary"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.897"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.915"
        app:rippleColor="@color/clrGenOne4th" />

    <TextView
        android:id="@+id/text_NoAccount_LoginPage"
        android:layout_width="152dp"
        android:layout_height="46dp"
        android:fontFamily="casual"

        android:text="@string/no_account_LoginPage"
        android:textAlignment="center"
        android:textColor="@color/clrGenOneTertiary"
        android:textStyle="italic"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.254"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.916" />

    <TextView
        android:id="@+id/text_ForgotPassword_LoginPage"
        android:layout_width="168dp"
        android:layout_height="43dp"
        android:fontFamily="casual"

        android:text="@string/forgot_pwd_LoginPage"
        android:textAlignment="center"
        android:textColor="@color/clrGenOneTertiary"
        android:textStyle="italic"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.226"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.674" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="167dp"
        android:layout_height="59dp"
        android:text="@string/log_in_here_LoginPage"

        android:paddingTop="10dp"
        android:textAlignment="center"
        android:textColor="@color/clrGenOneTertiary"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.096" />

    <TextView
        android:id="@+id/greetingView"
        android:layout_width="305dp"
        android:layout_height="45dp"

        android:textColor="@color/clrGenOneTertiary"
        android:textColorHint="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.613"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.994" />

</androidx.constraintlayout.widget.ConstraintLayout>