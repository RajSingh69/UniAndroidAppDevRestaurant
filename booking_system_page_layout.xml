<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/clrGenOnePrimary"
    >

    <!--
    @author: Rajan Bhamra 2034215
    @version: 3.0
    Purpose: Booking System Page for CSC306 Coursework.
    -->

    <TextView
        android:id="@+id/text_AvailableLocations_BookARestaurant"
        android:layout_width="278dp"
        android:layout_height="27dp"
        android:text="@string/available_locations_booking_system"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/clrGenOneTertiary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.446" />

    <TextView
        android:id="@+id/RajAppsLogo_BookARestaurant"
        android:layout_width="107dp"
        android:layout_height="33dp"

        android:background="@drawable/button_gradient"
        android:fontFamily="cursive"
        android:text="@string/raj_apps"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.035" />

    <TextView
        android:id="@+id/MainHeader_BookARestaurant"
        android:layout_width="146dp"
        android:layout_height="55dp"
        android:text="@string/book_restaurant_booking_system"

        android:textAlignment="center"
        android:textColor="@color/clrGenOneTertiary"
        android:textSize="20sp"
        android:textStyle="bold|italic"
        android:typeface="sans"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.448"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.1" />

    <EditText
        android:id="@+id/UserInputRestaurantDate_BookARestaurant"
        android:layout_width="319dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="date"
        android:hint="@string/req_date_booking_system"
        android:textColorHint="@color/white"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.551" />

    <TextView
        android:id="@+id/text_AvailableDates_BookARestaurant"
        android:layout_width="278dp"
        android:layout_height="27dp"
        android:text="@string/av_book_dates_booking_system"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/clrGenOneTertiary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.436"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.637" />

    <EditText
        android:id="@+id/UserInputRestaurantTime_BookARestaurant"
        android:layout_width="319dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="time"
        android:hint="@string/wanted_time_booking_system"
        android:textColorHint="@color/white"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.743" />

    <TextView
        android:id="@+id/text_AvailableTimes_BookARestaurant"
        android:layout_width="278dp"
        android:layout_height="27dp"
        android:text="@string/av_times_booking_system"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/clrGenOneTertiary"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.818" />

    <EditText
        android:id="@+id/UserInputRestaurantName_BookARestaurant"
        android:layout_width="319dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="text"

        android:hint="@string/name_booking_system"
        android:textColorHint="@color/white"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.223" />

    <EditText
        android:id="@+id/UserInputRestaurantLocation_BookARestaurant"
        android:layout_width="319dp"
        android:layout_height="64dp"
        android:ems="10"
        android:inputType="text"
        android:hint="@string/req_location_booking_system"
        android:textColorHint="@color/white"

        android:fontFamily="casual"
        android:textAlignment="center"
        android:textStyle="italic"
        android:textColor="@color/white"


        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.402"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.359" />

    <Button
        android:id="@+id/MakeABookingButton_BookARestaurant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/make_booking_booking_system"

        android:backgroundTint="@color/clrGenOneSecondary"
        android:textColor="@color/clrGenOne4th"
        android:textSize="20sp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.926" />


</androidx.constraintlayout.widget.ConstraintLayout>